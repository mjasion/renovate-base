{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePr",
    "docker:enableMajor",
    "group:monorepos",
    "group:recommended"
  ],
  "timezone": "Europe/Warsaw",
  "schedule": [
    "* 10-16 1-7 * 6"
  ],
  "configMigration": true,
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 0,
  "labels": ["renovate"],
  "argocd": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Group all packages from same monorepo/organization",
      "matchSourceUrls": ["**"],
      "groupName": "{{groupName}}"
    }
  ]
}
