{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePr",
    "docker:enableMajor",
    "group:aws-cdkMonorepo",
    "group:aws-sdk-client-mockMonorepo",
    "group:aws-sdk-goMonorepo",
    "group:aws-sdk-go-v2Monorepo",
    "group:tailwindcssMonorepo",
    "group:radix-ui-primitivesMonorepo",
    "group:recommended"
  ],
  "timezone": "Europe/Warsaw",
  "schedule": [
    "* 10-16 1-7 * 6"
  ],
  "configMigration": true,
  "rebaseWhen": "conflicted",
  "prConcurrentLimit": 0,
  "prHourlyLimit": 2,
  "labels": [
    "renovate"
  ],
  "argocd": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "description": "Group ai-sdk packages",
      "matchPackagePatterns": [
        "^@ai-sdk/",
        "^@ai"
      ],
      "groupName": "ai-sdk packages"
    }
  ]
}
