{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePr",
    "docker:enableMajor",
    "group:allDigest",
    "group:aws-cdkMonorepo",
    "group:aws-sdk-client-mockMonorepo",
    "group:aws-sdk-goMonorepo",
    "group:aws-sdk-go-v2Monorepo",
    "group:tailwindcssMonorepo",
    "group:radix-ui-primitivesMonorepo",
    "group:recommended"
  ],
  "timezone": "Europe/Warsaw",
  "schedule": [
    "* 10-16 * * 1-5"
  ],
  "configMigration": true,
  "rebaseWhen": "conflicted",
  "labels": [
    "renovate"
  ],
  "argocd": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "groupName": "all patch dependencies",
      "groupSlug": "all-patch",
      "matchPackageNames": [
        "*"
      ],
      "matchUpdateTypes": [
        "patch"
      ]
    },
    {
      "description": "Group ai-sdk packages",
      "groupName": "ai-sdk packages",
      "matchPackagePatterns": [
        "^@ai-sdk/",
        "^@ai"
      ]
    },
    {
      "description": "Group Arcjet packages",
      "groupName": "arcjet packages",
      "matchPackagePatterns": [
        "^@arcjet"
      ]
    }
  ]
}
